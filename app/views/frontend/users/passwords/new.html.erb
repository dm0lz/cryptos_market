<div class="container-fluid">
  <h2 class="text-center">Forgot your password?</h2>


  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
    <div class="form-group row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6">
        <br>
        <%= devise_error_messages! %>
      </div>
      <div class="col-sm-3"></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6"><hr></div>
      <div class="col-sm-3"></div>
    </div>

    <div class="form-group row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6">
        <%#= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>      
      </div>
      <div class="col-sm-3"></div>
    </div>

    <div class="actions row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-block btn-success btn btn-default' %>
      </div>
      <div class="col-sm-3"></div>
    </div>
  <% end %>

  <%= render "frontend/users/shared/links" %>

</div>